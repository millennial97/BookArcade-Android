<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".AddNewAddressActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="15dp"
        android:textColorHint="@color/colorPrimary">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_user"
            android:hint="@string/name"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimary" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_address1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_name"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:textColorHint="@color/colorPrimary">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_location"
            android:hint="@string/address_line_1"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimary" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_address2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_address1"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:textColorHint="@color/colorPrimary">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_location"
            android:hint="@string/address_line_2"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimary" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_landmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_address2"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:textColorHint="@color/colorPrimary">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_landmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_sign"
            android:hint="@string/landmark"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimary" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_landmark"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:textColorHint="@color/colorPrimary">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_phone"
            android:hint="@string/mobile_10_digit_number"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimary" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_pincode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_phone"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:textColorHint="@color/colorPrimary">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_pincode"
            android:hint="@string/pincode"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimary" />

    </android.support.design.widget.TextInputLayout>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_below="@id/til_pincode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_pincode"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@id/view"
        android:textColorHint="@color/colorPrimary">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:enabled="false"
            android:hint="@string/city"
            android:text="@string/bangalore"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_pincode"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/view"
        android:textColorHint="@color/colorPrimary">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:enabled="false"
            android:hint="@string/state"
            android:text="@string/karnataka"
            android:textColor="@color/colorPrimary" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_city"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/save_address"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:indeterminate="true"
        android:visibility="invisible"
        android:indeterminateTint="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/til_city"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>